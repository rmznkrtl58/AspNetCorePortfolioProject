@model CoreProjectPortfolio.Areas.User.Models.UserRegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
    
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Kullanıcı Kayıt Paneli</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/skydash/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/skydash/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/skydash/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/skydash/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/skydash/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/skydash/images/logo.svg" alt="logo">
                            </div>
                            <h4>Kullanıcı Kayıt Paneli:</h4>
                            <h6 class="font-weight-light"></h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <label>Ad:</label>
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                    <input asp-for="Name" type="text" class="form-control form-control-lg" placeholder="Adınız">
                                </div>
                                <div class="form-group">
                                    <label>Soyad:</label>
                                    <span class="text-danger" asp-validation-for="Surname"></span>
                                    <input asp-for="Surname" type="text" class="form-control form-control-lg" placeholder="Soyadınız">
                                </div>
                                <div class="form-group">
                                    <label>Kullanıcı Adı:</label>
                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                    <input asp-for="UserName" type="text" class="form-control form-control-lg" placeholder="Kullanıcı Adınız">
                                </div>
                                <div class="form-group">
                                    <label>E-Mail:</label>
                                    <span class="text-danger" asp-validation-for="Mail"></span>
                                    <input asp-for="Mail" type="email" class="form-control form-control-lg" placeholder="E-posta Adresiniz">
                                </div>
                                <div class="form-group">
                                    <label>Şifre:</label>
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                    <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="Şifreniz">
                                </div>
                                <div class="form-group">
                                    <label>Şifre Tekrar:</label>
                                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Şifre Tekrar">
                                </div>
                                <div class="form-group">
                                    <label>Resim Url:</label>
                                    <span class="text-danger" asp-validation-for="ImageUrl"></span>
                                    <input type="text" class="form-control form-control-lg" placeholder="Resim " asp-for="ImageUrl">
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Kayıt Ol</button>
@*                                     <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="../../index.html">Kayıt Ol</a>
 *@                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Kayıt olduysanız giriş yapmak için <a href="login.html" class="text-primary">Giriş Paneli</a>
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly">
                                    @*Şifrenin küçük harf büyük harf sayı girmesi gibi
                                        şartlarını sağlamadığında gösterdiği mesajdır.
                                    *@
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/skydash/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/skydash/js/off-canvas.js"></script>
    <script src="~/skydash/js/hoverable-collapse.js"></script>
    <script src="~/skydash/js/template.js"></script>
    <script src="~/skydash/js/settings.js"></script>
    <script src="~/skydash/js/todolist.js"></script>
    <!-- endinject -->
</body>

</html>