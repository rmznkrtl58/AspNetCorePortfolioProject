@model CoreProjectPortfolio.Areas.User.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Bilgilerimi Düzenle</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label >Ad:</label>
                    <input type="text" class="form-control"  asp-for="Name" placeholder="Adınız">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Soyad:</label>
                    <input type="text" class="form-control" asp-for="Surname" placeholder="Soyadınız">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Ad:</label>
                    <input type="text" class="form-control"  placeholder="Kullanıcı Adınız">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">E-posta:</label>
                    <input type="text" class="form-control"  placeholder="Mail Adresiniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre:</label>
                    <input type="password" class="form-control" asp-for="Password" id="exampleInputPassword4" placeholder="Şifreniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre Tekrar:</label>
                    <input type="password" class="form-control" asp-for="PasswordConfirm" id="exampleInputPassword4" placeholder="Şifre Tekrar">
                </div>
                <div class="form-group">
                    <label>Resim Seç</label>
                                  @*asp-for->Picture olması lazım pictureurl olmayacak*@
                    <input type="file" asp-for="Picture">
                    @* <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Yükle</button>
                        </span>
                    </div> *@
                </div>
                <button type="submit" class="btn btn-warning mr-2">Güncelle</button>
                <button class="btn btn-light">İptal Et</button>
            </form>
        </div>
    </div>
</div>

