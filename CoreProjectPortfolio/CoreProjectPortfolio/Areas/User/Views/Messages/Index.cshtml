@model List<EntityLayer.Concrete.WriterMessage>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    string color = " ";
}
<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gönderilen Mesajlar</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Alıcı
                            </th>
                            <th>
                                Konu
                            </th>
                            <th>
                                Tarih
                            </th>
                            <th>
                                Mesaj İçeriği
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var x in Model){
                            <tr >
                                
                                <td >
                                @x.ReceiverName
                            </td>
                                <td >
                               @x.Subject
                            </td>
                                <td >
                                @Convert.ToDateTime(x.Date).ToString("dd/MMM/yyyy")
                            </td>
                                <td><a href="/User/Messages/Getsendermessagedetails/@x.MessageId" class="btn btn-warning">İçerik</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
                <a style="margin-top:8px" href="/User/Messages/Addmessage/" class="btn btn-success">Yeni Mesaj</a>
            </div>
        </div>
    </div>
</div>


