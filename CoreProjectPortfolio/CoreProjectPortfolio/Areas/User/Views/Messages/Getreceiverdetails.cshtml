@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "Getreceiverdetails";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<h3>Mesaj Detayları</h3>
<form>
    <div style="margin-top:8px">
        <label>Gönderen:</label>
        <input type="text" readonly value="@Model.Sender" class="form-control" />
    </div>
    <div style="margin-top:8px">
        <label>Tarih:</label>
        <input type="text" readonly value="@Convert.ToDateTime(Model.Date).ToString("dd/MMM/yyyy")" class="form-control" />
    </div>
    <div style="margin-top:8px">
        <label>Konu:</label>
        <input type="text" readonly value="@Model.Subject" class="form-control" />
    </div>
    <div style="margin-top:8px">
        <label>İçerik:</label>
        @Html.TextAreaFor(x => x.MessageContent, new { @class = "form-control", @rows = 3 })
    </div>
</form>

