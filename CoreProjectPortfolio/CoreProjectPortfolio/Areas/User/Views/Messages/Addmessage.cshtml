@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "Addmessage";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<h4 style="color:red">Yeni Mesaj Gönderme Paneli:</h4>
<form method="post">
    <div style="margin-top:20px">
        <label>Alıcı:</label>
        <input type="text"  class="form-control" asp-for="Receiver" />
    </div>
    <div style="margin-top:8px">
        <label>Konu:</label>
        <input type="text" class="form-control" asp-for="Subject" />
    </div>
    <div style="margin-top:8px">
        <label>İçerik:</label>
        @Html.TextAreaFor(x => x.MessageContent, new { @class = "form-control", @rows = 3 })
    </div>
    <button style="margin-top:8px" class="btn btn-primary">Kaydet</button>
</form>



