@model List<EntityLayer.Concrete.Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            
                            <th>Başlık:</th>
                            <th>İçerik:</th>
                            <th>Tarih:</th>
                            
@*                             <th>Detaylar:</th>
 *@                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var x in Model){
                        <tr>
                            <td>@x.Title</td>
                            <td>@x.Content</td>
                            <td>@Convert.ToDateTime(x.Date).ToString("dd/MMM/yyyy")</td>
@*                             <td><a href="/User/Default/Getdetails/@x.Id" class="btn btn-info">Detaylar</a></td>
 *@                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

