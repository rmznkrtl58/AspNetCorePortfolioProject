@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_newadminlayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İletişim Adreslerinin Güncellendiği Sayfadır.</h4>
            @using (Html.BeginForm("Index", "Contact2", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.ContactId)
                <div class="form-group">
                    <label>Başlık:</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @style = "margin-top:8px" })
                </div>
                <div class="form-group">
                    <label>E-posta:</label>
                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", @style = "margin-top:8px" })
                </div>
                <div class="form-group">
                    <label>Telefon:</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @style = "margin-top:8px" })
                </div>
                <div class="form-group">
                    <label>Açıklama:</label>
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @style = "margin-top:8px", @rows = 3 })
                </div>
                <button type="submit" class="btn btn-outline-success mr-2">Güncelle</button>
            }
        </div>
    </div>
</div>








