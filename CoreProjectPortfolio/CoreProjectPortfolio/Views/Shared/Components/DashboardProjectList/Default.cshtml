@model List<EntityLayer.Concrete.Portfolio>
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Projelerim</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Platform: </th>
                                <th>Proje Adı:</th>
                                <th> Fiyat: </th>
                                <th> Oran: </th>
                                <th> Url: </th>
                                <th> Durum: </th>
                                <th> Detaylar: </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var x in Model){
                            <tr>
                                <td>
                                    @x.PortfolioId
                                </td>
                                    <td>
                                        @x.Platform
                                    </td>
                                    <td>
                                        @x.Name
                                    </td>
                                    <td>@x.Price</td>
                                <td> %@x.Value</td>
                                    <td> <a href="@x.ProjectUrl" class="btn btn-outline-info">Proje link</a> </td>
                                    <td>@x.Status </td>
                                    <td>
                                        <div class="badge badge-outline-success"><a href="/Portfolio/getportfolio/@x.PortfolioId/">Detaylar</a></div>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>