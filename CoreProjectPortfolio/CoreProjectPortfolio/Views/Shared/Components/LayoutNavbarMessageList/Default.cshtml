@model List<EntityLayer.Concrete.WriterMessage>
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Gelen Mesajlar</h6>
    @foreach(var x in Model)
    {
    <div class="dropdown-divider"></div>
    <a class="dropdown-item preview-item">
        <div class="preview-thumbnail">
            <img src="~/corona/template/assets/images/faces/face4.jpg" alt="image" class="rounded-circle profile-pic">
        </div>
        <div class="preview-item-content">
            <p class="preview-subject ellipsis mb-1">@x.SenderName sana mesaj göndermek istiyor.</p>
            <p class="text-muted mb-0"> @(((DateTime)x.Date).ToString("dd/MMM/yyyy")) </p>
        </div>
    </a>
    }
    <p class="p-3 mb-0 text-center">@ViewBag.m yeni mesaj</p>
</div>