@model List<EntityLayer.Concrete.Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_newadminlayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Referanslar</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> Resim: </th>
                            <th> Ad Soyad: </th>
                            <th> Şirket: </th>
                            <th> Sil: </th>
                            <th> Güncelle: </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var x in Model){
                        <tr>
                            <td class="py-1">
                                <img src="@x.ImageUrl" alt="image" />
                            </td>
                            <td> @x.ClientName </td>
                            <td> @x.Company </td>
                                <td>
                                    <a href="/Testimonial/Deletetestimonial/@x.TestimonialId" class="btn btn-outline-danger">Sil</a>
                                </td>
                                <td>
                                    <a href="/Testimonial/Gettestimonial/@x.TestimonialId" class="btn btn-outline-warning">Güncelle</a>
                                </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a style="margin-top:8px" href="/Testimonial/Addtestimonial/" class="btn btn-success">Yeni Referans</a>
        </div>
    </div>
</div>

