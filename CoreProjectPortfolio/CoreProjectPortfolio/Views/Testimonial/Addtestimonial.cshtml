@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "Addtestimonial";
    Layout = "~/Views/Shared/_newadminlayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Referansların Eklendiği Sayfadır.</h4>
            @using (Html.BeginForm("Addtestimonial", "Testimonial", FormMethod.Post))
            {
                <div class="form-group">
                    <label>Ad Soyad:</label>
                    <input type="text" class="form-control" style="color:white" name="ClientName" >
                </div>
                <div class="form-group">
                    <label>Şirket:</label>
                    <input class="form-control"  style="color:white" name="Company">
                </div>
                <div class="form-group">
                    <label>Resim Url:</label>
                    <input class="form-control"style="color:white" name="ImageUrl">
                </div>
                <div class="form-group">
                    <label>Açıklama:</label>
                    <textarea style="color:white" class="form-control" rows="4" name="Comment"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-success mr-2">Kaydet</button>
            }
        </div>
    </div>
</div>




