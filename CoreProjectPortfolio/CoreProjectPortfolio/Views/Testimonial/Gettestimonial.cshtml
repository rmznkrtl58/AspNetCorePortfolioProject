@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "Gettestimonial";
    Layout = "~/Views/Shared/_newadminlayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Referansların Güncellendiği Sayfadır.</h4>
            @using (Html.BeginForm("Gettestimonial", "Testimonial", FormMethod.Post))
            {
                @Html.HiddenFor(x=>x.TestimonialId)
                <div class="form-group">
                    <label>Ad Soyad:</label>
                    @Html.TextBoxFor(x=>x.ClientName,new{@class="form-control",@style="margin-top:8px"})
                </div>
                <div class="form-group">
                    <label>Şirket:</label>
                    @Html.TextBoxFor(x => x.Company, new { @class = "form-control", @style = "margin-top:8px" })
                </div>
                <div class="form-group">
                    <label>Resim Url:</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", @style = "margin-top:8px" })
                </div>
                <div class="form-group">
                    <label>Açıklama:</label>
                    @Html.TextAreaFor(x => x.Comment, new { @class = "form-control", @style = "margin-top:8px",@rows=3 })
                </div>
                <button type="submit" class="btn btn-outline-success mr-2">Güncelle</button>
            }
        </div>
    </div>
</div>






