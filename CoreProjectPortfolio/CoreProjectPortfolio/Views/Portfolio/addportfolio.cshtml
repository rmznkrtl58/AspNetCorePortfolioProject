@model EntityLayer.Concrete.Portfolio
@{
    ViewData["Title"] = "addportfolio";
    Layout = "~/Views/Shared/_newadminlayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Projelerin Eklendiği Sayfadır.</h4>
            @using (Html.BeginForm("addportfolio", "Portfolio", FormMethod.Post))
            {
                <div class="form-group">
                    <label>Platform:</label>
                    <input type="text" class="form-control" style="color:white" asp-for="Platform">
                    @Html.ValidationMessageFor(x => x.Platform)
                </div>
                <div class="form-group">
                    <label>Proje Adı:</label>
                    <input class="form-control" asp-for=Name style="color:white">
                    @Html.ValidationMessageFor(x => x.Name)
                </div>
                <div class="form-group">
                    <label>Maliyet:</label>
                    <input class="form-control" asp-for="Price" style="color:white">
                    @Html.ValidationMessageFor(x => x.Price)
                </div>
                <div class="form-group">
                    <label>Tamamlanma Oranı::</label>
                    <input class="form-control" asp-for="Value" style="color:white">
                    @Html.ValidationMessageFor(x => x.Value)
                </div>
                <div class="form-group">
                    <label>Resim Url:</label>
                    <input class="form-control" asp-for="ImageUrl" style="color:white">
                    @Html.ValidationMessageFor(x => x.ImageUrl)
                </div>
                <div class="form-group">
                    <label>Proje Url:</label>
                    <input class="form-control" asp-for="ProjectUrl" style="color:white">
                    @Html.ValidationMessageFor(x => x.ProjectUrl)
                </div>
                <button type="submit" class="btn btn-outline-success mr-2">Kaydet</button>
            }
        </div>
    </div>
</div>


