@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "getexperience";
    Layout = "~/Views/Shared/_newadminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimlerin Güncellendiği Sayfadır.</h4>
            @using (Html.BeginForm("getexperience","Experience",FormMethod.Post)){
               @Html.HiddenFor(x=>x.ExperienceId)
                <div class="form-group">
                    <label>Firma:</label>
                    <input type="text" class="form-control" style="color:white" asp-for="Name">
                </div>
                <div class="form-group">
                    <label>Statü-Tarih:</label>
                    <input class="form-control" asp-for=Date style="color:white">
                </div>
                <div class="form-group">
                    <label>Resim Url:</label>
                    <input class="form-control" asp-for="ImageUrl" style="color:white">
                </div>
                <div class="form-group">
                    <label>Açıklama:</label>
                    <textarea style="color:white" class="form-control" rows="4" asp-for="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-success mr-2">Güncelle</button>
            }
        </div>
    </div>
</div>


