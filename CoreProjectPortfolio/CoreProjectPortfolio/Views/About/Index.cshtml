@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_newadminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">x
        <div class="card-body">
            <h4 class="card-title">Hakkımda Paneli</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.AboutId)
                <div class="form-group">
                    <label>Başlık:</label>
                    <input type="text" class="form-control" style="color:white" asp-for="Title">
                </div>
                <div class="form-group">
                    <label>Yaş:</label>
                    <input class="form-control" asp-for="Age" style="color:white">
                </div>
                <div class="form-group">
                    <label>Mail:</label>
                    <input class="form-control" asp-for="Mail" style="color:white">
                </div>
                <div class="form-group">
                    <label>Telefon:</label>
                    <input class="form-control" asp-for="Phone" style="color:white">
                </div>
                <div class="form-group">
                    <label>Adres:</label>
                    <input class="form-control" asp-for="Address" style="color:white">
                </div>
                <div class="form-group">
                    <label>Resim Url:</label>
                    <input class="form-control" asp-for="ImageUrl" style="color:white">
                </div>
                <div class="form-group">
                    <label>Açıklama:</label>
                    <textarea style="color:white" class="form-control" rows="6" asp-for="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-success mr-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>
