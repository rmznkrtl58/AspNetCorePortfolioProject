@model List<EntityLayer.Concrete.Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_newadminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Verilen Hizmetlerin Listesi</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th style="color:white">#</th>
                            <th style="color:white">Başlık:</th>
                            <th style="color:white">SİL</th>
                            <th style="color:white">Güncelle:</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.ServiceId</td>
                                <td>@x.Title</td>
                                <td><a href="/Service/deleteservice/@x.ServiceId/" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Service/getservice/@x.ServiceId/" class="btn btn-outline-warning">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a style="margin-top:10px" href="/Service/addservice/" class="btn btn-outline-success mr-2">Yeni Hizmet</a>
            </div>
        </div>
    </div>
</div>