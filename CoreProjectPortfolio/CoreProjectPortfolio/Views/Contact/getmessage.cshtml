@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "getmessage";
    Layout = "~/Views/Shared/_newadminlayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimlerin Güncellendiği Sayfadır.</h4>
            @using (Html.BeginForm("getexperience", "Experience", FormMethod.Post))
            {
                <div class="form-group">
                    <label>Ad Soyad:</label>
                    <input type="text" class="form-control" style="color:white" asp-for="NameSurname">
                </div>
                <div class="form-group">
                    <label>E-posta:</label>
                    <input class="form-control" asp-for="Mail" style="color:white">
                </div>
                <div class="form-group">
                    <label>İçerik:</label>
                    <textarea style="color:white" class="form-control" rows="4" asp-for="Content"></textarea>
                </div>
            }
        </div>
    </div>
</div>


