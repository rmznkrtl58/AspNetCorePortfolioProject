@model List<EntityLayer.Concrete.Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_newadminLayout.cshtml";
    string renk = " ";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yetenek Listesi:</h4>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="color:white"> # </th>
                            <th style="color:white"> Yetenek Adı: </th>
                            <th style="color:white"> Yetenek Oranı: </th>
                            <th style="color:white"> Sil</th>
                            <th style="color:white"> Güncelle </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td> @x.SkillId </td>
                                <td> @x.Title </td>
                                <td>
                                    <p style="color:white">@x.Value%</p>
                                    <div class="progress" style="width:130px">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @x.Value%" aria-valuenow="@x.Value" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                                <td><a href="/Skill/deleteskill/@x.SkillId/" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Skill/getskill/@x.SkillId/" class="btn btn-warning">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a style="margin-top:12px" href="/Skill/addskill/" class="btn btn-success ">Yeni Yetenek</a>
            </div>
        </div>
    </div>
</div>
